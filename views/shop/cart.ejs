

<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">

  </head>
  <body>
    <!-- header -->
    <header class = "header">
      <%- include('../includes/nav.ejs') %>
      <div class = "head-body "></div>
    </header>
    <!-- end of header -->
	 <section class="page-section container">
	<div class="CartContainer">
   	   <div class="Header">
   	   	<h3 class="Heading">Shopping Cart</h3>
   	   	<h3 class="Action">              
			<a class="checkout-btn" href="/checkout">Checkout</a>
		</h3>
   	   </div><br>
		<% if (products.length > 0) { %>
			<% products.forEach(p => { %>
			<div class="Cart-Items">
				<div class="image-box">
					 <img src="/<%= p.productId.imageUrl %>" alt="<%= p.productId.title %>">
				</div>
				<div class="about">
					<h1 class="title"><%= p.productId.title %></h1>
					
				</div>
				<div class="counter">
					qty : <%= p.qty %>
				</div>
				<div class="prices">
					<div class="amount">$<%= p.productId.price %></div>
					
					<div class="remove">
						<form action="/cart-delete-item" method="POST">
						<input type="hidden" value="<%= p.productId._id %>" name="productId">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button class="danger" type="submit">Remove</button>
					</form>		
					</div>
				</div>
			</div>
			<% }) %>
		  <% } else { %>
                <h1>No Products in Cart!</h1>
            <% } %>
        </main>
   	 <hr> 
	 <br>
	 <div style="float:right;width: 20%;">
		 <h3>Total Amount : 100</h3>
		 <!-- <button class="btn">Checkout</button> -->
	 </div> 
   </div>
   </section>
    <%- include('../includes/footer.ejs') %>
  <%- include('../includes/end.ejs') %></div>