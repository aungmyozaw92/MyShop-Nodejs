<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">

  </head>
  <body>
    <!-- header -->
    <header class = "header">
      <%- include('../includes/nav.ejs') %>
      <div class = "head-body "></div>
    </header>
    <!-- end of header -->

    <!-- trending product -->
    <section class="page-section">
      <div class = "container">
      
      <form action="/signup" method="post">
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <div class="container">
            <label for="email"><b>Email</b></label>
            <input 
              type="text" 
              placeholder="Enter Email" 
              name="email"
              value="<%= oldInput.email %>" 
              required>
              <span><%const emailErr = validationErrors.find(e => e.param === 'email')%>
              <%= (emailErr) ? emailErr.msg : '' %></span>

            <label for="password"><b>Password</b></label>
            <input 
              type="password" 
              placeholder="Enter Password" 
              name="password" 
              value="<%= oldInput.email %>" 
              required>
             <span><%const passErr = validationErrors.find(e => e.param === 'password')%>
             <%= (passErr) ? passErr.msg : '' %></span>

            <label for="confirmPassword"><b>Confirm confirmPassword</b></label>
            <input type="password" placeholder="Enter Confirm Password" name="confirmPassword" required>
              <span><%const conPassErr = validationErrors.find(e => e.param === 'confirmPassword')%>
              <%= (conPassErr) ? conPassErr.msg : '' %></span>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit">Login</button>
            </div>
        </form>
        </div>
    </section>
    <!-- end of trending product -->


    <%- include('../includes/footer.ejs') %>
  <%- include('../includes/end.ejs') %>